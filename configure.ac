PKG_CHECK_MODULES(OIS, [OIS >= 1.0])
AC_SUBST(OIS_CFLAGS)
AC_SUBST(OIS_LIBS)

PKG_CHECK_MODULES(bullet, [bullet >= 2.79])
AC_SUBST(BULLET_CFLAGS)
AC_SUBST(BULLET_LIBS)

PKG_CHECK_MODULES([SDL], [sdl >= 1.2])
AC_SUBST(SDL_CFLAGS)
AC_SUBST(SDL_LIBS)

PKG_CHECK_MODULES(CEGUI, [CEGUI-0 >= 0.8])
AC_SUBST(CEGUI_CFLAGS)
AC_SUBST(CEGUI_LIBS)

PKG_CHECK_MODULES(CEGUI_OGRE, [CEGUI-0-OGRE >= 0.7])
